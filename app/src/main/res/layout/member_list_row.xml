<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:elevation="5dp"
    android:id="@+id/pad"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"
    android:background="#c799f2e9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="#ad75ec"
                android:id="@+id/member_name"
                android:layout_gravity="center"
                android:text="Member"
                android:textStyle="bold|italic"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/call"
                android:src="@android:drawable/sym_call_outgoing"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/mail"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:src="@android:drawable/sym_action_email" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total Deposit:"/>
            <TextView
                android:id="@+id/total_deposit_number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total Meal:"/>
            <TextView
                android:id="@+id/total_meal_number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rest of Money:"/>
            <TextView
                android:id="@+id/rest_money"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2000"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/menu_bar"
        android:layout_weight=".1"
        android:layout_width="0dp"
        android:src="@drawable/ic_menu"
        android:background="@null"
        android:layout_height="match_parent" />
</LinearLayout>